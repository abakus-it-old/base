<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_uom_decimal_precision_form" model="ir.ui.view">
            <field name="name">product.uom.decimal.precision.form</field>
            <field name="model">product.uom</field>
            <field name="inherit_id" ref="product.product_uom_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='rounding']" position="after">
                    <field name="report_decimal_precision" />
                </xpath>
            </field>
        </record>

        <record id="product_uom_decimal_precision_tree" model="ir.ui.view">
            <field name="name">product.uom.decimal.precision.tree</field>
            <field name="model">product.uom</field>
            <field name="inherit_id" ref="product.product_uom_tree_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="report_decimal_precision" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
        